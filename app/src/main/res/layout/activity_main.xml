<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ashik619.carapp.MainActivity"
    android:background="#7cde202a">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Make"
        android:id="@+id/textView1"
        android:onClick="SelectBrand"
        android:textSize="30sp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textColor="#e2150e54" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="startDetailsActivity"
        style="@android:style/Widget.DeviceDefault.Button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Car"
        android:id="@+id/textView3"
        android:onClick="SelectModel"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#e2150e54" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car App"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#d6930303"
        android:textSize="50sp"
        android:id="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Reviews"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#e5d63108" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In One Click!"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#e5d63108" />

</RelativeLayout>
