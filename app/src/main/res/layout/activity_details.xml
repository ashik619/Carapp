<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ashik619.carapp.DetailsActivity"
    android:clickable="false"
    android:background="#74df1422">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Make :"
        android:id="@+id/makeView"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#eab60404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/makeView1"
        android:onClick="Retry"
        android:clickable="true"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model :"
        android:id="@+id/carView"
        android:layout_below="@+id/makeView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textIsSelectable="false"
        android:textColor="#eab60404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type :"
        android:id="@+id/typeView"
        android:layout_below="@+id/carView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textColor="#eab60404" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeView"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout"
        android:background="#89f73434">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petrol Engine"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textColor="#eab60404" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/pengineView"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:textColor="#eab60404"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/ppowerView"
            android:layout_below="@+id/pengineView"
            android:layout_centerHorizontal="true"
            android:textColor="#eab60404"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/ptorqueView"
            android:layout_below="@+id/ppowerView"
            android:layout_centerHorizontal="true"
            android:textColor="#eab60404"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/ptansView"
            android:layout_below="@+id/ptorqueView"
            android:layout_centerHorizontal="true"
            android:textColor="#eab60404"
            android:textSize="20sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout2"
        android:background="#99eb1212">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diesel Engine"
            android:id="@+id/DieselView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textColor="#eab60404" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dengineView"
            android:layout_below="@+id/DieselView"
            android:layout_centerHorizontal="true"
            android:textColor="#eab60404"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dpowerView"
            android:layout_below="@+id/dengineView"
            android:layout_centerHorizontal="true"
            android:textColor="#eab60404"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dtorqueView"
            android:layout_below="@+id/dpowerView"
            android:layout_alignLeft="@+id/dpowerView"
            android:layout_alignStart="@+id/dpowerView"
            android:textColor="#eab60404"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dtransView"
            android:layout_below="@+id/dtorqueView"
            android:layout_alignLeft="@+id/dtorqueView"
            android:layout_alignStart="@+id/dtorqueView"
            android:textColor="#eab60404"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:id="@+id/textView4"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#eab60404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/reviewView"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textColor="#eab60404"
        android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
